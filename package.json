{
  "name": "@technote-space/github-action-pr-helper",
  "version": "2.3.2",
  "description": "PullRequest Helper for GitHub Actions.",
  "keywords": [
    "github",
    "github actions"
  ],
  "homepage": "https://github.com/technote-space/github-action-pr-helper",
  "bugs": {
    "url": "https://github.com/technote-space/github-action-pr-helper/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/technote-space/github-action-pr-helper.git"
  },
  "license": "MIT",
  "author": {
    "name": "Technote",
    "email": "technote.space@gmail.com",
    "url": "https://technote.space"
  },
  "type": "module",
  "exports": {
    "import": "./dist/index.mjs",
    "require": "./dist/index.cjs"
  },
  "main": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && rm -f dist/*.js && rollup -c",
    "cover": "vitest run --coverage",
    "postinstall": "[ -n \"$CI\" ] || [ ! -f node_modules/.bin/husky ] || husky install",
    "lint": "eslint 'src/**/*.ts' --cache",
    "lint:fix": "eslint --fix 'src/**/*.ts'",
    "prepublishOnly": "[ -n \"$CI\" ] || [ ! -f node_modules/.bin/pinst ] || pinst --disable",
    "postpublish": "[ -n \"$CI\" ] || [ ! -f node_modules/.bin/pinst ] || pinst --enable",
    "test": "yarn lint && yarn typecheck && yarn cover",
    "typecheck": "tsc --noEmit",
    "update": "npm_config_yes=true npx npm-check-updates -u --timeout 100000 && yarn install && yarn upgrade && yarn audit"
  },
  "dependencies": {
    "@actions/core": "^1.8.2",
    "@actions/github": "^5.0.3",
    "@octokit/openapi-types": "^11.2.0",
    "@technote-space/filter-github-action": "^0.6.1",
    "@technote-space/github-action-helper": "^5.3.5",
    "moment": "^2.29.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@rollup/plugin-typescript": "^8.3.2",
    "@sindresorhus/tsconfig": "^2.0.0",
    "@technote-space/github-action-test-helper": "^0.9.5",
    "@types/node": "^17.0.34",
    "@typescript-eslint/eslint-plugin": "^5.24.0",
    "@typescript-eslint/parser": "^5.24.0",
    "c8": "^7.11.3",
    "eslint": "^8.15.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.1",
    "nock": "^13.2.4",
    "pinst": "^3.0.0",
    "rollup": "^2.73.0",
    "typescript": "^4.6.4",
    "vitest": "^0.12.6"
  },
  "publishConfig": {
    "access": "public"
  }
}
